flash = $(".<%= header_class %> .flash")
<% if text.blank? %>
  flash.hide()
<% else %>
  <% background = case type
               when :error
                 "bg-danger"
               when :success
                 "bg-success"
               else
                 ""
               end %>

  flash.
    hide().
    removeClass("bg-success bg-danger").
    addClass("<%= background %>").
    html("<%= text %>").
    fadeIn()
<% end %>
