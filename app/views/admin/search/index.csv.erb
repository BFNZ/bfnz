                            view_model.address,
                            view_model.phone,
                            view_model.email,
                            view_model.method_received,
                            view_model.item_codes,
                            view_model.further_contact_requested,
                            view_model.admin_notes,
                            view_model.suburb,
                            view_model.city_town,
                            view_model.post_code,
                            view_model.ta,
                            view_model.shipped_at,
                            view_model.shipment_id,
                            view_model.ip_address,
                            view_model.tertiary_student,
                            view_model.tertiary_institution,
                            view_model.creator_name,
                            view_model.creator_email,
                            view_model.method_of_discovery,
                            view_model.created_at,
                           ]) -%>
