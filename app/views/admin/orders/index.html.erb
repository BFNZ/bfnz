<h2>Search Orders</h2>

<%= render 'search' %>

<div><%= page_entries_info @orders %></div>
<%= paginate @orders %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Items</th>
      <th>Shipped At</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <% presenter = Admin::OrderPresenter.new(order) %>
      <tr class="<%= presenter.row_class %>">
        <td><%= presenter.id %></td>
        <td><%= presenter.created %></td>
        <td><%= presenter.first_name %></td>
        <td><%= presenter.last_name %></td>
        <td><%= presenter.items %></td>
        <td><%= presenter.shipped_at %></td>
        <td>
          <div class='btn-group-vertical'>
            <%= link_to 'Edit', edit_admin_order_path(presenter.id), class: 'btn btn-default' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>
