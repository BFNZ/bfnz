flash = $(".orders .flash")
flash.hide()
flash.removeClass("bg-success bg-danger")

<% if @cancel_order.success? %>
  flash_background = "bg-success"
  flash_text = "Order cancelled"
  $("#orders").html("<%= escape_javascript(render 'admin/customers/orders', presenter: @customer_presenter) %>")
<% else %>
  flash_background = "bg-danger"
  flash_text = "Sorry, that didn't work"
  $("#orders").html("<%= escape_javascript(render 'admin/customers/orders', presenter: @customer_presenter) %>")
<% end %>

flash.addClass(flash_background)
flash.html(flash_text)
flash.fadeIn()
