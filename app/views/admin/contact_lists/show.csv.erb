<%= CSV.generate_line ["Coordinator",
                       @csv_view.coordinator_name,
                       @csv_view.coordinator_email] %>

<%- headers = ["Customer ID",
               "Title",
               "First name",
               "Last name",
               "Address",
              ]-%>

<%= CSV.generate_line headers %>
<%- @csv_view.contacts.each do |contact| -%>
  <%=raw CSV.generate_line([contact.id,
                            contact.title,
                            contact.first_name,
                            contact.last_name,
                            contact.address,
                           ]) -%>
<%- end -%>
