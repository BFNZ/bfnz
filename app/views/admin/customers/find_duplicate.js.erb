<% if @merge_view.able_to_merge? %>
  $("#merge-preview").html("<%= escape_javascript(render 'admin/customers/customer_with_orders', view_model: @merge_view) %>")
<% else %>
  $("#merge-preview").html("")
  <% flash_type = :error %>
<% end %>

<%= render 'shared/flash_messages', header_class: 'merged-customer-records', text: @merge_view.error_message, type: flash_type %>
