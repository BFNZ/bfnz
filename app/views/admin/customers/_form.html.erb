<%= form_for [:admin, customer_form], url: admin_customer_path(customer_form.customer), method: :patch, remote: true, html: {role: "form", class: "form-horizontal"} do |f| %>
  <div class="col-sm-8">
    <div class="form-group">
      <div class="col-sm-4">
        <%= f.required_label :title, class: "control-label"%>
        <%= f.select :title, titles_for_select(customer_form), {include_blank: 'Unknown'}, class: "form-control"%>
      </div>
      <div class="col-sm-4">
        <%= f.required_label :first_name, class: "control-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="col-sm-4">
        <%= f.required_label :last_name, class: "control-label" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8">
        <%= f.label :address, "Postal Address", class: "control-label" %>
        <%= f.text_field :address, class: "addressfinder_widget form-control", placeholder: "Start typing to see a list of addresses to choose from" %>
        <%= f.hidden_field :suburb, class: "hidden-address suburb" %>
        <%= f.hidden_field :city_town, class: "hidden-address city_town" %>
        <%= f.hidden_field :post_code, class: "hidden-address post_code" %>
        <%= f.hidden_field :pxid, class: "hidden-address pxid" %>
        <%= f.hidden_field :postal_line_1, class: "hidden-address postal_line_1" %>
        <%= f.hidden_field :postal_line_2, class: "hidden-address postal_line_2" %>
        <%= f.hidden_field :postal_line_3, class: "hidden-address postal_line_3" %>
        <%= f.hidden_field :postal_line_4, class: "hidden-address postal_line_4" %>
        <%= f.hidden_field :postal_line_5, class: "hidden-address postal_line_5" %>
        <%= f.hidden_field :postal_line_6, class: "hidden-address postal_line_6" %>
      </div>
      <div class="col-sm-4">
        <%= f.required_label :ta, label_text: "District", class: "control-label" %>
        <%= f.select :ta, territorial_authorities_for_select(customer_form), {include_blank: true}, class: "form-control hidden-address ta" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label :phone, class: "control-label" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="col-sm-6">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="checkbox col-sm-6">
        <%= f.label :tertiary_student do %>
          <%= f.check_box :tertiary_student, class: 'tertiary-institution-toggle' %>Is the order for a tertiary student?
        <% end %>
      </div>
      <div id="tertiary_institution" class="col-sm-6">
        <%= f.label :tertiary_institution, class: "control-label" %>
        <%= f.text_field :tertiary_institution, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-6">
        <%= render 'further_contact_requested', form: f %>
      </div>
      <div class="col-sm-6">
        <dl>
          <dt><%= f.label 'Date customer record created' %></dt>
          <dd><%= customer_form.date_created %></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="form-group">
      <%= f.label :admin_notes, "Notes", class: "control-label" %>
      <%= f.text_area :admin_notes, class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="col-sm-8">
      <%= f.submit "Update Customer", class: "btn btn-primary" %>
      <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
