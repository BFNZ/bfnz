<% view_models.each do |merged_customer_view| %>
  <div class="row">
    <%= render 'merged_customer', view_model: merged_customer_view %>
  </div>
<% end %>
<div class="row">
  <%= link_to "Merge another customer into this one", '#', class: 'btn btn-default', id: 'find-customer-to-merge' %>
  <%= form_tag(find_admin_customers_path, method: :get, id: "find-customer-form", remote: true) do %>
    <%= label_tag :customer_id, 'Customer #' %>
    <%= text_field_tag :customer_id %>
    <%= submit_tag "Look up customer", class: 'btn btn-default' %>
  <% end %>
  <div id="merge-preview"></div>
</div>
