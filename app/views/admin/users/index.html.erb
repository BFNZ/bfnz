<h2>Welcome <%= current_user.name %> - <%= link_to 'Edit Password', edit_admin_user_path(current_user) %></h2>
<figure>
  <figcaption>List of users:</figcaption>
  <ul>
    <% if current_user.superadmin? %>
      <% @users.each do |user| %>
        <li>
          <%= user.name %> - <%= user.email %>
          <% if !user.superadmin %>
            <%= link_to 'Edit Password', edit_admin_user_path(user) %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</figure>
