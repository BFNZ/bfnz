<%= form_for @table, html: {class: 'table-form', role: 'form' } do |f|%>

  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :coordinator_first_name %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :coordinator_first_name %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :coordinator_last_name %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :coordinator_last_name %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :coordinator_phone %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :coordinator_phone %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :coordinator_email %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :coordinator_email %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :city %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :city %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :location %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :location %>
      <div class="form-description">E.g. "Warehouse carpark", "Vic uni", etc</div>
    </div>
  </div>

  <%= f.submit "Create table", class: "btn btn-primary" %>
<% end %>